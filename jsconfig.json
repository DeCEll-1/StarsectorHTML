{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "checkJs": true,
        "allowJs": true,
        "noEmit": true,

        "strict": false,
        "noImplicitAny": false,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,

        "skipLibCheck": true,
        "noImplicitOverride": true,
    },
    "include": [ "*.js", "**/*.js", "typedefs.d.ts", "**/*.d.ts" ],
    "exclude": [ "node_modules" ]
}